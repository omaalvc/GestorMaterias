@model GestorMaterias.Models.Estudiante

@{
    ViewData["Title"] = "Detalles del Estudiante";
    var registros = ViewBag.Registros as List<GestorMaterias.Models.Registro>;
}

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Información del Estudiante</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        <a asp-controller="Registros" asp-action="MateriasDisponibles" asp-route-id="@Model.Id" class="btn btn-success">Inscribir en Materias</a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-info text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Materias Inscritas</h4>
            <span class="badge bg-light text-dark">Total: @(registros?.Count ?? 0)</span>
        </div>
    </div>
    <div class="card-body">
        @if (registros != null && registros.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-info">
                        <tr>
                            <th>Materia</th>
                            <th>Profesor</th>
                            <th>Créditos</th>
                            <th>Fecha de Inscripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var registro in registros)
                        {
                            <tr>
                                <td>@registro.Materia.Nombre</td>
                                <td>@registro.Materia.Profesor?.Nombre</td>
                                <td>@registro.Materia.Creditos</td>
                                <td>@registro.FechaInscripcion.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-controller="Registros" asp-action="Delete" asp-route-id="@registro.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                        <a asp-controller="Estudiantes" asp-action="VerCompaneros" asp-route-id="@Model.Id" asp-route-materiaId="@registro.MateriaId" class="btn btn-sm btn-info">Ver Compañeros</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Este estudiante no tiene materias inscritas.
            </div>
        }
    </div>
</div>