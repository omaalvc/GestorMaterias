@model IEnumerable<GestorMaterias.Models.Estudiante>

@{
    ViewData["Title"] = "Estudiantes";
}

<h1>Estudiantes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Estudiante</a>
</p>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Listado de Estudiantes</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>Nombre de Usuario</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>Materias Inscritas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@(ViewData[$"Username_{item.Id}"] ?? "Sin usuario")</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@item.Registros?.Count</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                    @* <a asp-controller="Registros" asp-action="MateriasDisponibles" asp-route-id="@item.Id" class="btn btn-sm btn-success">Inscribir</a> *@
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>