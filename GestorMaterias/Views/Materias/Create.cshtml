@model GestorMaterias.Models.Materia

@{
    ViewData["Title"] = "Crear Materia";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Crear Nueva Materia</h4>
    </div>
    <div class="card-body">
        @if (TempData["MensajeError"] != null)
        {
            <div class="alert alert-warning">
                @TempData["MensajeError"]
            </div>
        }
        
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Nombre" class="control-label">Nombre</label>
                        <input name="Nombre" id="Nombre" class="form-control" value="@Model?.Nombre" />
                        @if (ViewData.ModelState["Nombre"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["Nombre"].Errors.First().ErrorMessage</span>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="ProfesorId" class="control-label">Profesor</label>
                        <select name="ProfesorId" id="ProfesorId" class="form-control">
                            <option value="0">-- Seleccionar Profesor --</option>
                            @if (ViewBag.Profesores != null)
                            {
                                foreach (var item in ViewBag.Profesores)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        @if (ViewData.ModelState["ProfesorId"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["ProfesorId"].Errors.First().ErrorMessage</span>
                        }
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Descripcion" class="control-label">Descripci贸n</label>
                        <textarea name="Descripcion" id="Descripcion" class="form-control" rows="3">@Model?.Descripcion</textarea>
                        @if (ViewData.ModelState["Descripcion"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["Descripcion"].Errors.First().ErrorMessage</span>
                        }
                    </div>
                </div>
            </div>
            
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Configurar validaci贸n manual para el form
            $('form').submit(function(e) {
                let valid = true;
                
                // Validar nombre
                if ($('#Nombre').val() === '') {
                    alert('El nombre de la materia es requerido');
                    valid = false;
                }
                
                // Validar descripci贸n
                if ($('#Descripcion').val() === '') {
                    alert('La descripci贸n de la materia es requerida');
                    valid = false;
                }
                
                // Validar profesor
                if ($('#ProfesorId').val() === '0' || $('#ProfesorId').val() === '') {
                    alert('Debe seleccionar un profesor');
                    valid = false;
                }
                
                return valid;
            });
        });
    </script>
}