@model GestorMaterias.Models.Materia

@{
    ViewData["Title"] = "Editar Materia";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Editar Materia</h4>
    </div>
    <div class="card-body">
        @if (TempData["MensajeError"] != null)
        {
            <div class="alert alert-warning">
                @TempData["MensajeError"]
            </div>
        }
        
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" value="@Model.Id" />
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Nombre" class="control-label">Nombre</label>
                        <input name="Nombre" id="Nombre" class="form-control" value="@Model.Nombre" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="ProfesorId" class="control-label">Profesor</label>
                        <select name="ProfesorId" id="ProfesorId" class="form-control" required>
                            @foreach (var item in ViewBag.Profesores)
                            {
                                if (item.Value == Model.ProfesorId.ToString())
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ProfesorId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Descripcion" class="control-label">Descripci√≥n</label>
                        <textarea name="Descripcion" id="Descripcion" class="form-control" rows="3" required>@Model.Descripcion</textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}