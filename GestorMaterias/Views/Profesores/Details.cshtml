@model GestorMaterias.Models.Profesor

@{
    ViewData["Title"] = "Detalles del Profesor";
    var materias = ViewBag.Materias as List<GestorMaterias.Models.Materia> ?? new List<GestorMaterias.Models.Materia>();
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Información Personal</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Materias Asignadas</h4>
                </div>
                <div class="card-body">
                    @if (materias != null && materias.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Descripción</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var materia in materias)
                                    {
                                        <tr>
                                            <td>@materia.Nombre</td>
                                            <td>@materia.Descripcion</td>
                                            <td>
                                                <a asp-controller="Materias" asp-action="Details" asp-route-id="@materia.Id" class="btn btn-info btn-sm">
                                                    <i class="bi bi-eye"></i> Ver
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        @if (materias.Count < 2)
                        {
                            <div class="alert alert-info mt-3">
                                <i class="bi bi-info-circle"></i> Este profesor puede impartir @(2 - materias.Count) materia(s) más.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mt-3">
                                <i class="bi bi-exclamation-triangle"></i> Este profesor ha alcanzado el máximo de materias asignables (2).
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Este profesor no tiene materias asignadas aún.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary ml-2">
            <i class="bi bi-arrow-left"></i> Volver a la Lista
        </a>
    </div>
</div>