@model IEnumerable<GestorMaterias.Models.Registro>

@{
    ViewData["Title"] = "Inscripciones";
}

<h1>Inscripciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Inscripción</a>
</p>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Listado de Inscripciones</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Estudiante</th>
                        <th>Materia</th>
                        <th>Profesor</th>
                        <th>Fecha de Inscripción</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>@item.Estudiante?.Nombre</td>
                            <td>@item.Materia?.Nombre</td>
                            <td>@item.Materia?.Profesor?.Nombre</td>
                            <td>@item.FechaInscripcion.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.Estado == "Activo")
                                {
                                    <span class="badge bg-success">@item.Estado</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@item.Estado</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>