@model List<GestorMaterias.Models.Registro>

@{
    ViewData["Title"] = "Mis Materias Inscritas";
}

<div class="container mt-4">
    <h2>Mis Materias Inscritas</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No tienes materias inscritas actualmente.</p>
            <a asp-action="MateriasDisponibles" class="btn btn-primary">Ver materias disponibles</a>
        </div>
    }
    else
    {
        <div class="mb-3">
            <a asp-action="MateriasDisponibles" class="btn btn-success">Inscribir nueva materia</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Materia</th>
                        <th>Profesor</th>
                        <th>Fecha de Inscripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var registro in Model)
                    {
                        <tr>
                            <td>@registro.Materia.Nombre</td>
                            <td>
                                @if (registro.Materia.Profesor != null)
                                {
                                    @(registro.Materia.Profesor.Nombre)
                                }
                                else
                                {
                                    <span class="text-muted">Sin asignar</span>
                                }
                            </td>
                            <td>@registro.FechaInscripcion.ToString("dd/MM/yyyy")</td>
                            <td>
                                <form asp-action="CancelarInscripcion" method="post" onsubmit="return confirm('¿Estás seguro de que deseas cancelar esta inscripción?');">
                                    <input type="hidden" name="registroId" value="@registro.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Cancelar inscripción</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>